{
    "compilerOptions": {
        "target": "es5",
        "module": "umd",
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": false,
        "outDir": "build",
        "lib": [
            "es2015",
            "es2015.core",
            "dom"
            //"es2015.promise"
            //"es2015.symbol"
        ],
        "types": [
            "@types/node"
        ]
    },
    "include": [
        "*.ts",
        "package-src"
    ],
    "exclude": [
        ".vscode",
        "build",
        "node_modules"
    ]
}
